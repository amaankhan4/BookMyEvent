generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model eventManager {
  evmid_  Int @id @default(autoincrement())
  evmName String
  evmUserId String  @unique
  evmEmail String @unique
  evmPassword String
  events  events[]
}

model events {
  eventid_ Int @id @default(autoincrement())
  eventId String @unique
  title String
  description String
  date DateTime
  evMangerid_ String
  evManger eventManager @relation(fields: [evMangerid_], references: [evmUserId])
  booking bookings[]
}

model user {
  userid_ Int @id @default(autoincrement())
  userId  String @unique
  userMail  String @unique
  userPassword  String
  name  String
  bookings bookings[]
}

model bookings {
  id  Int @id @default(autoincrement())
  userId  String
  eventId String
  ticketCount Int
  user user @relation(fields: [userId],references: [userId])
  event events @relation(fields: [eventId],references: [eventId])
}
